@page
@model WebApplication1.Pages.Forms.CreateModel
@{
    ViewData["Title"] = "Create";
}

<div class="container" style="padding:10px">
    <div>
        <div>
            <p class="main-books">CREATE NEW</p>
        </div>
        <div id="main-divider" class="divider-custom divider-light">
            <div class="divider-custom-line"></div>
            <div class="divider-custom-icon"><i class="fas fa-star" color="white"></i></div>
            <div class="divider-custom-line"></div>
        </div>
    </div>
</div>

<div class="container-details-create">
    <form method="post" enctype="multipart/form-data">
        <div class="container" style="padding:30px">
            <div class="form-group">
                <div class="row">
                    <div  id="font-weight" class="col-2">
                        <label asp-for="Books.Title"></label>
                    </div>
                    <div class="col-10">
                        <input asp-for="Books.Title" id="create-title" class="col-6" />
                    </div>
                </div>
            </div>



            <div class="form-group">
                <div class="row">
                    <div  id="font-weight" class="col-2">
                        <label asp-for="Books.Rating"></label>
                    </div>
                    <div class="col-10">
                        <input asp-for="Books.Rating" class="col-6" />
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div  id="font-weight" class="col-2">
                        <label asp-for="Books.Description"></label>
                    </div>
                    <div class="col-10">
                        <textarea asp-for="Books.Description" id="create-description" class="col-10"></textarea>
                    </div>
                </div>
            </div>
            <div>
                <input type="file" id="file" asp-for="Upload" style="display:none;" />
                <label for="file" style="float: left; margin: 0px; padding: 0px; height: 40px; text-align: center; padding-top: 7px; margin-right: 15px; border: 1px solid grey; width: 170px;" id="btn-details" class="btn btn-light btn-sm">Select a Book Cover</label>
                <div style="float:right" class="col-sm-3">
                    <input type="submit" value="Create" class="btn btn-success form-control" />
                </div>
                <div style="float:right; padding-right:0px;" class="col-sm-3">
                    <a asp-page="/Forms/Index" class="btn btn-danger form-control" >Return</a>
                </div>
            </div>
        </div>
    </form>
</div>